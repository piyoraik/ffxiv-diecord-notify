DISCORD_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-application-client-id
DISCORD_GUILD_ID=target-guild-id-for-commands
DISCORD_CHANNEL_ID=target-channel-id-for-daily-summary
LOKI_BASE_URL=http://loki.monitoring.svc.cluster.local:3100
LOKI_QUERY={content="ffxiv", instance="DESKTOP-LHEGLIC", job="ffxiv-dungeon"}
# 任意: 追加の Loki パイプ（例: | json, |~ "hoge" など）。未指定なら全ログを取得
LOKI_QUERY_FILTER=
LOKI_QUERY_LIMIT=5000
APP_TIME_ZONE=Asia/Tokyo
# 集計開始/終了時刻（JST 時）。例: 10〜8 で「10:00〜翌日 08:00」
AGGREGATION_START_HOUR_JST=10
AGGREGATION_END_HOUR_JST=10

# --- PostgreSQL 接続（この環境では PG* を使用） ---
PGHOST=
PGPORT=5432
PGUSER=
PGPASSWORD=
PGDATABASE=
# SSL が必要な場合: PGSSLMODE=require（クラスタ仕様に合わせて設定）
PGSSLMODE=

# --- サンプル: ローカル開発で port-forward を使う場合 ---
# 1) 別シェルでポートフォワード
#    kubectl -n discord-bot port-forward svc/postgresql 5432:5432
#    # または Pod を直接
#    # kubectl -n discord-bot port-forward pod/postgresql-0 5432:5432
# 2) この .env を localhost 向けに設定
# PGHOST=localhost
# PGPORT=5432
# PGUSER=<user>
# PGPASSWORD=<password>
# PGDATABASE=<database>
# PGSSLMODE=

# --- サンプル: クラスタ内の DNS で直接接続する場合（K8s 内で動作） ---
# PGHOST=postgresql.discord-bot.svc.cluster.local
# PGPORT=5432
# PGUSER=<user>
# PGPASSWORD=<password>
# PGDATABASE=<database>
# PGSSLMODE=
