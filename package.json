{
  "name": "discord-ff14-bot",
  "version": "0.1.34",
  "private": true,
  "type": "module",
  "description": "PoC Discord bot that summarizes FFXIV dungeon runs from log files.",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "node --test --import tsx \"tests/**/*.test.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:baseline": "prisma migrate resolve --applied 20241014000000_init",
    "docker:build:local": "BUILD_TIMESTAMP=$(date -u +%Y-%m-%dT%H:%M:%SZ) docker buildx build --load --target build --build-arg BUILD_TIMESTAMP=$BUILD_TIMESTAMP -t discord-ff14-bot:local .",
    "deploy:commands": "tsx src/registerCommands.main.ts",
    "daily:summary": "tsx src/jobs/dailySummary.ts",
    "release": "standard-version --no-verify",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "husky": "^9.1.7",
    "prisma": "^5.16.1",
    "standard-version": "^9.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5"
  }
}
